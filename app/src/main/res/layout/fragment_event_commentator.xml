<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cf.channelsd.Fragments.EventCommentatorFragment"
    android:background="@color/color_yellow_fade">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:gravity="center">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/create_event_btn"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="@string/create_an_event"
            android:textSize="30sp"
            android:background="@color/color_blue_primary" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/upcoming_event_btn"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="@string/upcoming_event"
            android:textSize="30sp"
            android:background="@color/color_blue_primary"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
