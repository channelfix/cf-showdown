<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENT TITLE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/color_yellow_primaryDark"/>
            <TextView
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE SCHEDULE"
                android:textSize="10sp"
                android:background="@color/color_yellow_primaryDark"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THIS IS THE EVENT DESCRIPTION"
                android:background="@color/color_yellow_primaryDark"/>
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/event_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize : Php 1000"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@color/color_green_primary" />
            <Button
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:text="JOIN"
                android:textSize="20sp"
                android:background="@color/color_yellow_primary"
                android:layout_marginTop="10dp">
            </Button>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>