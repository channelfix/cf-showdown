<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/upcoming_event_item"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="125dp" />
            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENT TITLE"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE SCHEDULE"
                android:textSize="12sp"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THIS IS THE EVENT DESCRIPTION"
                android:visibility="gone" />
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/event_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize : Php 1000"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@color/color_green_primaryLight"
                android:textColor="@color/color_black"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_contestant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:visibility="gone" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_contestant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:visibility="gone" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_commentator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:visibility="gone" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:visibility="gone" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/event_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>